<%- partial('post/title', {item: item, index: false}) %>

<div class="row <% if (post) { %>post<% } else { %>page<% } %>">
	<!-- cols -->
	<% if (post) { %>
	<div class="col-md-9">
	<% } else { %>
	<div class="col-md-12">
	<% } %>

	<% if (item.description) { %>
		 <div class="alert alert-success description">
			<i class="fa fa-info-circle"></i> <%- markdown(item.description) %>			
		</div> <!-- alert -->
	<% } %>		

	<!-- content -->
	<div class="mypage">		
	    <%- item.content %>	  

	    <!-- add warnning-->
	    <hr>
		<div class="alert-diy alert-warning">
			<i class="fa fa-bell"></i>
			<p>
				本站文章如没有特殊说明，均为原创，转载请以链接方式注明<a href="<%- item.permalink %>" target="_blank">本文地址</a>。
			</p>
		</div>
	</div>
	
	<div>
	  	<center>
			<%- partial('post/pagination', {page: item}) %>
	    </center>
	</div>

<% if (theme.addthis){ %>
	<div class="jiathis_style">
		<span class="jiathis_txt">分享到：</span>
		<a class="jiathis_button_qzone">QQ空间</a>
		<a class="jiathis_button_tsina">新浪微博</a>
		<a class="jiathis_button_tqq">腾讯微博</a>
		<a class="jiathis_button_weixin">微信</a>
		<a href="http://www.jiathis.com/share?uid=<%= theme.addthis %>" class="jiathis jiathis_txt jiathis_separator jtico jtico_jiathis" target="_blank">更多</a>
		<a class="jiathis_counter_style"></a>
	</div>
	<br><br>
<% } %>

	<!-- comment -->
	<%- partial('post/comment', {page: item}) %>
	
	</div> <!-- col-md-9/col-md-12 -->
	
	<% if (post) { %>
		<%- partial('post/meta', {item: item}) %>
	<% } %>
</div><!-- row -->
